<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Reactive Label Display</masterLabel>
    <description>Displays a label and a value that updates reactively in Flows.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="label" type="String" label="Label Text" default="Calculated Value" />
            <property name="value" type="String" label="Value (Reactive)" role="inputOnly"/>
            <property name="unit" type="String" label="Unit Suffix" default=""/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>