{
  "type": "ml-project",
  "description": "ML/AI project template with data pipeline structure",
  "files": {
    "pyproject.toml": "Project metadata and dependencies",
    "src/{package}/train.py": "Training entry point",
    "src/{package}/predict.py": "Inference entry point",
    "src/{package}/evaluate.py": "Evaluation scripts",
    "src/{package}/data/": "Data loading and transforms",
    "src/{package}/models/": "Model definitions",
    "src/{package}/features/": "Feature engineering",
    "notebooks/": "Jupyter notebooks (exploration only)",
    "data/raw/": "Original immutable data (gitignored)",
    "data/processed/": "Cleaned data (gitignored)",
    "configs/experiment.yaml": "Experiment hyperparameters",
    "models/": "Saved model artifacts (gitignored)"
  },
  "required": ["pyproject.toml", "README.md", ".gitignore", "data/README.md"]
}
